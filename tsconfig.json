{
  "compilerOptions": {
    "target": "ES2022",                   
    "module": "CommonJS",                  
    "rootDir": "./src",                    
    "outDir": "./dist",                    
    "strict": true,                        
    "esModuleInterop": true,               
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,                  
    "moduleResolution": "node",            
    "allowSyntheticDefaultImports": true,  
    "resolveJsonModule": true,             
    "baseUrl": "./src",                    
    "paths": {
      "@models/*": ["models/*"],          
      "@routes/*": ["routes/*"],          
      "@controllers/*": ["controllers/*"]  
    }
  },
  "include": ["src"],                     
  "exclude": ["node_modules", "dist"]     
}
